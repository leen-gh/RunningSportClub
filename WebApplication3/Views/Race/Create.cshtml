@{
}
<form method="post" asp-action="Create">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />

    <!--Title-->
    <div class="form-group">
        <!--asp-for is helping to connect with the prop -->
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter The Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!--Des-->
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter The Description">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>


    <!--Image -->
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Enter The Description">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!--RaceCategory-->
    <div class="form-group">
        <label asp-for="RaceCategory">RaceCategory</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>

    <!--Address -->
    <div class="form-group">
        <!--asp-for is helping to connect with the prop -->
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Enter The Street name ">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!--asp-for is helping to connect with the prop -->
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="Enter The City name ">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <!--asp-for is helping to connect with the prop -->
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="Enter The State name ">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
